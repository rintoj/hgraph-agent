{
  "name": "@hgraph/agent",
  "version": "1.0.0",
  "description": "AI agent framework with tool support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "tsc --noEmit --project tsconfig.json && biome check --write --unsafe ./src",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "publish": "npm publish --access public",
    "release": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public",
    "release:dry": "npm publish --dry-run --access public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "nanoid": "^5.1.5",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "biome": "^0.3.3",
    "jest": "^30.0.5",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "tools",
    "gemini",
    "typescript"
  ],
  "author": "HGraph",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgraph-io/agent.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
